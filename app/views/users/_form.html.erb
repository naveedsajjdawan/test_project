<div class="container">
    <div class="row justify-content-center">        
          <div class="col-10">
              <%= render 'shared/errors', obj:@user%>
              <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
                  
                  <div class="form-group row mb-3">
                    <%= f.label :username, class: "col-2 col-form-label text-light" %>
                      <div class="col-10">
                        <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
                      </div>
                  </div>

                    <div class="form-group row">
                      <%= f.label :email, class: "col-2 mb-3 col-form-label text-light" %>
                        <div class="col-10"> 
                        <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter a valid Email" %>
                        </div>
                    </div>

                    <div class="form-group row">
                      <%= f.label :password, class: "col-2 col-form-label text-light" %>
                        <div class="col-10"> 
                        <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter a strong password" %>
                        </div>
                    </div>
                
                    <div class="form-group row justify-content-center mt-3">
                      <%= f.submit "sign up", class: "btn btn-outline-light btn-lg" %>
                      
                    </div>
                <% end %>
          </div>
          <div class="bt-3">
            <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-info justify-content-center" %>
          </div>
    </div>
</div>
